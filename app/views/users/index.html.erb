<% @users.each do |user| %>
  <div class="users">
    <div class="user-image">Image</div>
    <div class="user-info">
      <div>
        <h2><%= link_to user.name, user_path(user) %></h2>
      </div>
      <div class="post-num"><p>Number of posts: <%= user.posts.count %></p></div>
    </div>
  </div>
<% end %>
